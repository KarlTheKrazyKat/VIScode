{
  "name": "vis",
  "displayName": "VIS",
  "repository": "https://github.com/KarlTheKrazyKat/VIScode",
  "publisher": "KarlTheKrazyKat",
  "description": "VScode extension for VIS",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/replacements.js",
  "module": "./out/insertions.js",
  "contributes": {
    "commands": [
      {
        "command": "viscode.addLabel",
        "title": "Add label from selection"
      },
      {
        "command": "viscode.addButton",
        "title": "Add button from selection"
      },
      {
        "command": "viscode.addEntry",
        "title": "Add entry from selection"
      },
      {
        "command": "viscode.addCombobox",
        "title": "Add combobox from selection"
      }
    ],
    "submenus": [
      {
        "id": "vis.code",
        "label": "VIS"
      }
    ],
    "menus":{
      "editor/context": [
        {
          "submenu": "vis.code",
          "group": "viscode"
        }
      ],
      "vis.code": [
        {
        "command": "viscode.addLabel",
        "group": "viscode@1",
        "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addButton",
          "group": "viscode@2",
          "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addEntry",
          "group": "viscode@3",
          "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addCombobox",
          "group": "viscode@4",
          "when": "editorLangId == 'python' && editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}