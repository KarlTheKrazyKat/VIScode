{
  "name": "vis",
  "displayName": "VIS",
  "repository": "https://github.com/KarlTheKrazyKat/VIScode",
  "publisher": "KarlTheKrazyKat",
  "description": "VScode extension for VIS",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/replacements.js",
  "module": "./out/truevis.js",
  "contributes": {
    "commands": [
      {
        "command": "viscode.addLabel",
        "title": "Add label from selection"
      },
      {
        "command": "viscode.addButton",
        "title": "Add button from selection"
      },
      {
        "command": "viscode.addEntry",
        "title": "Add entry from selection"
      },
      {
        "command": "viscode.addCombobox",
        "title": "Add combobox from selection"
      }
    ],
    "submenus": [
      {
        "id": "vis.code",
        "label": "VIS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "vis.code",
          "group": "visedit"
        }
      ],
      "explorer/context": [
        {
          "submenu": "vis.code",
          "group": "visexpl"
        }
      ],
      "vis.code": [
        {
          "command": "viscode.addLabel",
          "group": "visedit@1",
          "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addButton",
          "group": "visedit@2",
          "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addEntry",
          "group": "visedit@3",
          "when": "editorLangId == 'python' && editorHasSelection"
        },
        {
          "command": "viscode.addCombobox",
          "group": "visedit@4",
          "when": "editorLangId == 'python' && editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "viscode.addLabel",
        "key": "shift+alt+L"
      },
      {
        "command": "viscode.addButton",
        "key": "shift+alt+B"
      },
      {
        "command": "viscode.addEntry",
        "key": "shift+alt+E"
      },
      {
        "command": "viscode.addCombobox",
        "key": "shift+alt+M"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode": "^1.1.34"
  }
}
